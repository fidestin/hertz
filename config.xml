<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fidestin.hertz" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hertz</name>
    <description>
        Nice stuff for Hertz
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
	
	<platform name="android">
		<splash src="res/screen.png" density="port-hdpi"/>
		<splash src="res/screen.png" density="port-ldpi"/>
		<splash src="res/screen.png" density="port-mdpi"/>
		<splash src="res/screen.png" density="port-xhdpi"/>
	</platform>
	
	<preference name="splashscreen" value="screen" />
	<preference name="SplashScreenDelay" value="5000" />
	
    <content src="index.html" />
    <access origin="*" />
	<icon src="res/icon.png" />
	
</widget>
